{
  "name": "wc-vendors",
  "title": "WC Vendors Marketplace",
  "version": "3.0.0",
  "author": {
    "name": "Jamie Madden (support@wcvendors.com)",
    "url": "https://wcvendors.com"
  },
  "scripts": {
    "start": "npm install && gulp && composer install",
    "dev": "gulp && gulp watch",
    "build:dev": "gulp",
    "build:prod": "gulp build",
    "test": "composer test",
    "integration-test": "composer integration-test",
    "test:chromedriver": "composer chromedriver",
    "test:acceptance": "composer chromedriver && composer codecept",
    "release": "composer install --no-dev -o && gulp build && gulp release && composer install"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/register": "^7.12.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "beeper": "^1.1.1",
    "browser-sync": "^2.26.12",
    "browserify": "^16.5.2",
    "browserslist": "^4.14.5",
    "css-mqpacker": "^7.0.0",
    "cypress": "^3.8.3",
    "del": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.0",
    "gulp-buffer": "0.0.2",
    "gulp-cached": "^1.1.1",
    "gulp-copy": "^4.0.1",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.1.0",
    "gulp-sort": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-tap": "^1.0.1",
    "gulp-uglify": "^3.0.1",
    "gulp-wp-pot": "^2.5.0",
    "gulp-zip": "^4.2.0",
    "husky": "^1.3.1",
    "js-yaml": "^3.14.0",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1"
  },
  "browserslist": [
    "> 1%",
    "ie >= 11",
    "last 1 Android versions",
    "last 1 ChromeAndroid versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Edge versions",
    "last 2 Opera versions"
  ],
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "semi": true,
    "useTabs": true,
    "parser": "babel",
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "parser": "scss"
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jquery": true,
      "es6": true,
      "node": true,
      "amd": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "wordpress",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "babel"
    ],
    "rules": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.scss": [
      "prettier --write",
      "git add"
    ],
    "assets/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.php": [
      "./vendor/bin/phpcbf -q",
      "./vendor/bin/phpcs",
      "git add"
    ]
  }
}
